@model IEnumerable<MiniCrm.Models.ViewModels.UserListViewModel>

<div>
    <div id="success" class="alert alert-success" style="display: none; margin-bottom:20px;">
        <span id="message">
            <script type="text/javascript">@Html.Raw(@ViewBag.SuccessMessage)</script>
        </span>
    </div>

    <div class="row">
        <div class="col-xs-6">
            <a class="btn btn-primary" href="/useredit?id=0">Add New User</a>
        </div>
        <div class="col-xs-6">
            <form action="/userlist" method="POST">
                <div class="input-group">
                    <input type="text" class="form-control" style="float: right;" placeholder="Search" name="searchText" />
                    <div class="input-group-btn">
                        <button class="btn btn-primary" type="submit">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <br />
    <br />
    <table class="table table-striped">
        <thead>
            <tr>
                <th style="white-space:nowrap">Name</th>
                <th style="white-space:nowrap">Email</th>
                <th style="white-space:nowrap">Phone</th>
                <th style="white-space:nowrap">Address</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>
                        @user.Name
                    </td>
                    <td>
                        @user.Email
                    </td>
                    <td>
                        @user.Phone
                    </td>
                    <td>
                        @Html.Raw(user.Address)
                    </td>
                    <td>
                        <a class="btn btn-default" href="/UserEdit?id=@user.Id">Edit</a>
                        <a class="btn btn-default" href="/UserDelete?id=@user.Id" data-confirm="Are you sure you want to delete @user.Email?">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>